            <div class="help_connection-item">
                <p class="help_connection-item-title">{{item.title}}</p>
                <ul class="help_list help_list--connection">
                    {% for list in item.list %}
                    <li>
                        <p>{{list}}</p>
                    </li>
                    {% endfor %}
                </ul>
                <div class="help_connection-item-img">
                    <img src="{{item.img}}" alt="Аппаратура">
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
