{% set pageTitle = 'Адреса доставки' %}
{% set headerType = 'transparent' %}
{% extends "app/src/njk/layout/lk.njk" %}
{% block content %}
{% from "app/src/njk/components/lk_nav.njk" import lkNav %}
{{ lkNav(3) }}
<div class="lk-wrapper">
    <section class="lk-address">
        <div class="iv-container lk-address_container">
            <h1 class="lk-address_h1">Адреса доставки</h1>
            <p class="lk-address_subtitle">Добавить новый адрес доставки</p>
            <form class="lk-address-form">
                <div class="iv-row lk-address-row lk-address-row--new">
                    <div class="border-select-wrapper lk-address-input-col">
                        <select class="js--border-select" data-placeholder="Страна*" required>
                            <option></option>
                            <option value="1">Value1</option>
                            <option value="2">Value2</option>
                            <option value="3">Value3</option>
                        </select>
                    </div>
                    <div class="border-select-wrapper lk-address-input-col">
                        <select class="js--border-select" data-placeholder="Регион*" required>
                            <option></option>
                            <option value="1">Value1</option>
                            <option value="2">Value2</option>
                            <option value="3">Value3</option>
                        </select>
                    </div>
                    <label class="lk-address-input-col">
                        <span class="visually-hidden">Город</span>
                        <input type="text" class="base-text-input" placeholder="Город*" required>
                    </label>
                    <label class="lk-address-input-col">
                        <span class="visually-hidden">Улица, дом, строение, корпус, подъезд, квартира</span>
                        <textarea type="text" class="base-text-input base-text-input--textarea lk-address-textarea"
                            placeholder="Улица, дом, строение, корпус, подъезд, квартира" required> </textarea>
                    </label>
                </div>
                <a href="#" class="btn-blue lk-address_bottom-btn">Сохранить адрес</a>
            </form>
        </div>
    </section>
</div>
{% endblock %}