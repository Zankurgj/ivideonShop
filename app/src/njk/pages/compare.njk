{% set pageTitle = 'Сравнение товаров' %}
{% set headerType = 'transparent' %}
{% extends "app/src/njk/layout/index.njk" %}
{% block content %}
<div class="compare_top-slider-container js--compare-top-slider-container">
    <div class="compare_top-slider-wrapper">
        <div class="compare_product-slider js--compare-slider">
            {% for i in range(0, 4) %}
            <div class="compare_top-product-slide">
                <div class="compare_top-product-item">
                    <div class="compare_top-product-item-img">
                        <img src="../images/img/common/product_promo.png" alt="Ivideon Cute 360">
                    </div>
                    <div class="compare_top-product-item-inner">
                        <p class="compare_top-product_type">Поворотная камера</p>
                        <div class="compare_top-product-middle">
                            <p class="compare_top-product-name">Ivideon Cute 360</p>
                        </div>
                        <div class="compare_top-product-cost-wrapper">
                            <span class="compare_top-product-cost-item">
                                <span class="compare_top-product-cost">5 190 </span>
                                <span class="compare_top-product-cost-currency">₽</span>
                            </span>
                            <span class="compare_top-product-cost-item compare_top-product-cost-item--old">
                                <span class="compare_top-product-cost-old">5 390 </span>
                                <span class="compare_top-product-cost-old-currency">₽</span>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
            <div class="compare_top-product-slide">
                <div class="compare_top-product-slide-add">
                    <a href="#" class="compare_top-product-slide-add-zone">
                        <svg class="svg-icon compare_top-product-slide-add-icon">
                            <use xlink:href="../images/sprites/svg/sprite.symbol.svg#plus"></use>
                        </svg>
                        <span class="visually-hidden">Добавить товары к сравнению</span>
                    </a>
                    <button class="btn-blue-border compare_top-product-slide-add-btn">Добавить товары для
                        сравнения</button>
                </div>
            </div>
        </div>
    </div>
</div>
<section class="compare_section">
    <div class="iv-container compare_iv-container">
        <div class="compare_top">
            <h1 class="compare_h1">Сравнение товаров</h1>
        </div>
        <div class="compare_nav">
            <div class="iv-row compare_nav-row">
                <div class="compare_nav-item-wrapper compare_nav-item-wrapper--active">
                    <a href="#" class="compare_nav-item">
                        <span class="compare_nav-item-name">Видеоняни</span>
                        <span class="compare_nav-item-text">3 товара</span>
                    </a>
                    <button class="compare_nav-item-remove">
                        <svg class="svg-icon compare_nav-item-remove-icon">
                            <use xlink:href="../images/sprites/svg/sprite.symbol.svg#cancel"></use>
                        </svg>
                        <span class="visually-hidden">Удалить</span>
                    </button>
                </div>
                <div class="compare_nav-item-wrapper">
                    <a href="#" class="compare_nav-item">
                        <span class="compare_nav-item-name">Видеоняни</span>
                        <span class="compare_nav-item-text">4 товара</span>
                    </a>
                    <button class="compare_nav-item-remove">
                        <svg class="svg-icon compare_nav-item-remove-icon">
                            <use xlink:href="../images/sprites/svg/sprite.symbol.svg#cancel"></use>
                        </svg>
                        <span class="visually-hidden">Удалить</span>
                    </button>
                </div>
                <div class="compare_nav-item-wrapper">
                    <a href="#" class="compare_nav-item">
                        <span class="compare_nav-item-name">Видеоняни</span>
                        <span class="compare_nav-item-text">4 товара</span>
                    </a>
                    <button class="compare_nav-item-remove">
                        <svg class="svg-icon compare_nav-item-remove-icon">
                            <use xlink:href="../images/sprites/svg/sprite.symbol.svg#cancel"></use>
                        </svg>
                        <span class="visually-hidden">Удалить</span>
                    </button>
                </div>
            </div>
            <button class="compare_nav-del-btn compare_nav-del-btn--desktop">Удалить все списки</button>
        </div>
    </div>
    <div class="compare_product-slider-wrapper js--compare-slider-container">
        <div class="compare_product-slider js--compare-slider">
            {% for i in range(0, 4) %}
            <div class="compare_product-slide">
                <div class="compare_product-item">
                    <div class="compare_product-item-top">
                        <span class="compare_product-item-badge">Хит</span>
                        <div class="compare_product-item-stars">
                            {% for i in range(0, 5) %}
                            <span class="compare_product-item-star-icon"></span>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="compare_product-item-img">
                        <img src="../images/img/common/product_promo.png" alt="Ivideon Cute 360">
                    </div>
                    <div class="compare_product-item-inner">
                        <p class="compare_product_type">Поворотная камера</p>
                        <div class="compare_product-middle">
                            <p class="compare_product-name">Ivideon Cute 360</p>
                            <button class="compare_product-btn btn-like-main js--btn-like">
                                <span class="visually-hidden">нравится</span>
                            </button>
                        </div>
                        <div class="compare_product-cost-wrapper">
                            <span class="compare_product-cost-item">
                                <span class="compare_product-cost">5 190 </span>
                                <span class="compare_product-cost-currency">₽</span>
                            </span>
                            <span class="compare_product-cost-item compare_product-cost-item--old">
                                <span class="compare_product-cost-old">5 390 </span>
                                <span class="compare_product-cost-old-currency">₽</span>
                            </span>
                        </div>
                        <button class="compare_product-item-basket-btn-mobile">
                            <span class="visually-hidden">В корзину</span>
                        </button>
                        <button class="btn-blue compare_product-item-btn-desktop">В корзину</button>
                    </div>
                </div>
            </div>
            {% endfor %}
            <div class="compare_product-slide">
                <div class="compare_product-slide-add">
                    <a href="#" class="compare_product-slide-add-zone">
                        <svg class="svg-icon compare_product-slide-add-icon">
                            <use xlink:href="../images/sprites/svg/sprite.symbol.svg#plus"></use>
                        </svg>
                        <span class="visually-hidden">Добавить товары к сравнению</span>
                    </a>
                    <p class="compare_product-slide-add-text">Добавить товары <br> к сравнению</p>
                    <button class="btn-blue-border compare_product-slide-add-btn">Показать аналоги</button>
                </div>
            </div>
        </div>
    </div>
    <div class="iv-container compare_iv-container">
        <div class="compare_table-top">
            <p class="compare_table-top-title">Сравнение характеристик</p>
            <button class="compare_table-top-btn">Отображать только различия</button>
        </div>
        <div class="compare_table-wrapper">
            <div class="compare_table-row">
                <p class="compare_table-title">Цена товара</p>
                <div class="compare_table-slider js--compare-slider">
                    {% for i in range(0, 4) %}
