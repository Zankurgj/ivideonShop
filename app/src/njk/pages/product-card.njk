                        <input type="radio" class="product-card_tabs-nav-input js--toggle-input" name="productTab"
                            data-tab-id="productTab{{loop.index}}" {%if loop.first%}checked{%endif%}>
                        <span class="product-card_tabs-nav-item-btn">{{navProduct}}</span>
                    </label>
                    {% endfor %}
                </div>
            </div>
