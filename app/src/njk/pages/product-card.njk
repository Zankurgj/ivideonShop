{% set pageTitle = 'Карточка товара' %}
{% set headerType = 'transparent' %}
{% extends "app/src/njk/layout/index.njk" %}
{% block content %}
<div class="catalog-breadcrumbs">
    <div class="iv-container">
        {% from "app/src/njk/components/breadcrumbs.njk" import breadcrumbs %}
        {{ breadcrumbs([['Камеры видеонаблюдения'],['Поворотная камера Ivideon Cute 360']]) }}
    </div>
</div>
<section class="product-card">
    <div class="iv-container product-card--iv-container">
        <div class="product-card_top">
            <div class="product-card_top-col-left">
                <span class="product-card_top-badge">Новинка</span>
                <div class="product-card_top_btns product-card_top_btns--mobile">
                    <button class="product-card_top_btn product-card_top_btn--like">
                        <span class="visually-hidden">нравится</span>
                    </button>
                    <button class="product-card_top_btn product-card_top_btn--compare">
                        <span class="visually-hidden">сравнить</span>
                    </button>
                </div>
                <div class="product-card_top-stars">
                    <div class="product-card_top_stars-wrapper">
                        {% set starsItem = 5 %}
                        {% for i in range(0, starsItem) %}
                        <span class="product-card_top_stars-icon"></span>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="product-card_top-col-right">
                <div class="product-card_top_btns product-card_top_btns--desktop ">
                    <button class="product-card_top_btn product-card_top_btn--like">
                        <span class="visually-hidden">нравится</span>
                    </button>
                    <button class="product-card_top_btn product-card_top_btn--compare">
                        <span class="visually-hidden">сравнить</span>
                    </button>
                </div>
            </div>
        </div>
        <div class="product-card_section">
            <div class="product-card_slider-col">
                <p class="product-card_type">Поворотная камера</p>
                <p class="product-card_name">Ivideon Cute 360</p>
                <div class="product-card_slider-wrapper">
                    <div class="product-card_slider-main js--product-card-slider-main">
                        {% for i in range(0, 10) %}
                        <div class="product-card_slider-item-wrapper">
                            <div class="product-card_slider-item">
                                <img src="../images/img/product/product-slide.png" alt="Ivideon Cute 360">
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    <div class="product-card_slider-nav-container">
                        <div class="product-card_slider-nav-wrapper">
                            <div class="product-card_slider-nav js--product-card-slider-nav">
                                {% for i in range(0, 10) %}
                                <div class="product-card_slider-nav-item">
                                    <div class="product-card_slider-nav-item-wrapper">
                                        <img src="../images/img/product/product-slide-nav.png" alt="Ivideon Cute 360">
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                        <button class="product-card_slider-btn" style="background-image:url('')">
                            <span class="visually-hidden">видео</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="product-card_info-col">
                <form class="product-card_form">
                    <div class="product-card_info-block">
                        <p class="product-card_info-title">Какая емкость вам подойдет?</p>
                        <div class="iv-row product-card_info-row">
                            <label class="product-card_info-btn-wrapper product-card_info-btn-wrapper--small">
                                <input type="radio" class="product-card_info-btn-input" name="storage" checked>
                                <span class="product-card_info-btn">
                                    <span class="product-card_info-btn-text">Без карты</span>
                                </span>
                            </label>
                            <label class="product-card_info-btn-wrapper product-card_info-btn-wrapper--small">
                                <input type="radio" class="product-card_info-btn-input" name="storage">
                                <span class="product-card_info-btn">
                                    <span class="product-card_info-btn-text">64 Gb</span>
                                    <span class="product-card_info-btn-text-color">490 <span>₽</span></span>
                                </span>
                            </label>
                            <label class="product-card_info-btn-wrapper product-card_info-btn-wrapper--small">
                                <input type="radio" class="product-card_info-btn-input" name="storage">
                                <span class="product-card_info-btn">
                                    <span class="product-card_info-btn-text">128 Gb</span>
                                    <span class="product-card_info-btn-text-color">990 <span>₽</span></span>
                                </span>
                            </label>
                            <label class="product-card_info-btn-wrapper product-card_info-btn-wrapper--small">
                                <input type="radio" class="product-card_info-btn-input" name="storage">
                                <span class="product-card_info-btn">
                                    <span class="product-card_info-btn-text">256 Gb</span>
                                    <span class="product-card_info-btn-text-color">1 490 <span>₽</span></span>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="product-card_info-block">
                        <p class="product-card_info-title">Тарифы и гарантия продукта</p>
                        <div class="iv-row product-card_info-row">
                            <label class="product-card_info-btn-wrapper product-card_info-btn-wrapper--big">
                                <input type="radio" class="product-card_info-btn-input" name="tariffs" checked>
                                <span class="product-card_info-btn">
                                    <span class="product-card_info-btn-text">Тариф “Freemium”</span>
                                    <span class="product-card_info-btn-text-color">1 990 ₽ <span>₽</span></span>
                                </span>
                            </label>
                            <label class="product-card_info-btn-wrapper product-card_info-btn-wrapper--big">
                                <input type="radio" class="product-card_info-btn-input" name="tariffs">
                                <span class="product-card_info-btn">
                                    <span class="product-card_info-btn-text">Тариф “Online”</span>
                                    <span class="product-card_info-btn-text-color">2 490 <span>₽</span></span>
                                </span>
                            </label>
                            <label class="product-card_info-btn-wrapper product-card_info-btn-wrapper--big">
                                <input type="radio" class="product-card_info-btn-input" name="tariffs">
                                <span class="product-card_info-btn">
                                    <span class="product-card_info-btn-text">Тариф “Cloud”</span>
                                    <span class="product-card_info-btn-text-color">2 990 <span>₽</span></span>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="product-card_info-block">
                        <p class="product-card_info-title">Выбирите гарантию</p>
                        <div class="iv-row product-card_info-row">
                            <label class="product-card_info-btn-wrapper product-card_info-btn-wrapper--big">
                                <input type="radio" class="product-card_info-btn-input" name="warranty" checked>
                                <span class="product-card_info-btn">
                                    <span class="product-card_info-btn-text">Без гарантии</span>
                                </span>
                            </label>
                            <label class="product-card_info-btn-wrapper product-card_info-btn-wrapper--big">
                                <input type="radio" class="product-card_info-btn-input" name="warranty">
                                <span class="product-card_info-btn">
                                    <span class="product-card_info-btn-text">Расширенная гарантия</span>
                                    <span class="product-card_info-btn-text-color">1 990 <span>₽</span></span>
                                </span>
                            </label>
                        </div>
                    </div>
                    <div class="product-card_info-cost-wrapper">
                        <p class="product-card_info-cost">5 390 <span class="product-card_info-currency">₽</span></p>
                        <p class="product-card_info-cost-old">5 390 <span
                                class="product-card_info-cost-old-currency">₽</span></p>
                    </div>
                    <div class="product-card_counter_byu-wrapper">
                        <div class="product-card_counter-wrapper">
                            <button class="product-card_counter-btn js--btn-counter" data-counter-type="minus"
                                data-counter-id="counter1" type="button">
                                <span>–</span>
                            </button>
                            <input class="product-card_counter js--counter" type="number" value="1" size="4" min="1"
                                id="counter1" required>
                            <button class="product-card_counter-btn js--btn-counter" data-counter-type="plus"
                                data-counter-id="counter1" type="button">
                                <span>+</span>
                            </button>
                        </div>
                        <button class="btn-blue product-card_info-cost-btn" type="submit">Купить</button>
                    </div>
                    <div class="product-card_info-feature-wrapper">
                        {% set featureItems = [
                        {
                        icon: '../images/img/product/instagram.svg',
                        title: 'Full HD',
                        text: 'Разрешение'
                        },
                        {
                        icon: '../images/img/product/shield.svg',
                        title: '3 года',
                        text: 'Гарантия'
                        },
                        {
                        icon: '../images/img/product/rotate.svg',
                        title: '360°',
                        text: 'Угол поворота'
                        },
                        {
                        icon: '../images/img/product/wifi.svg',
                        title: 'Wi-Fi',
                        text: 'И Ethernet'
                        }
                        ] %}
                        {% for item in featureItems %}
                        <div class="product-card_info-feature-item">
                            <div class="product-card_info-feature-icon">
                                <img src="{{item.icon}}" alt="{{item.title}}">
                            </div>
                            <p class="product-card_info-feature-title">{{item.title}}</p>
                            <p class="product-card_info-feature-text">{{item.text}}</p>
                        </div>
                        {% endfor %}
                    </div>
                    <div class="product-card_info-delivery">
                        <p class="product-card_info-delivery-title">Способы доставки</p>
                        <p class="product-card_info-delivery-text"><a href="#">Экспресс-доставка</a> за день <span>(1
                                день,
                                490 ₽)</span> </p>
                        <p class="product-card_info-delivery-text"><a href="#">Самовывоз</a> из 14 магазинов
                            <span>(сегодня
                                и позже)</span>
                        </p>
                        <p class="product-card_info-delivery-text"><a href="#">Доставка</a> на дом <span>(завтра и
                                позже, в
                                подарок!)</span></p>
                    </div>
                </form>
            </div>
        </div>
        <div class="product-card_tabs-wrapper">
