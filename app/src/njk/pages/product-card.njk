                                <div class="product-card-description-item-img">
                                    <img src="{{item.icon}}" alt="{{item.title}}">
                                </div>
                                <div class="product-card-description-item-inner">
                                    <p class="product-card-description-item-title">{{item.title}}</p>
                                    <p class="product-card-description-item-text">{{item.text}}</p>
                                </div>
